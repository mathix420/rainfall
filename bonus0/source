void	p(char *dest, char *s)
{
	char	buf[4104];

	puts(s);
	read(0, buf, 4096);
	*strchr(&buf, '\n') = 0;
	strncpy(dest, &buf, 20);

	return;
}

void	pp(char *dest)
{
	char	v1[20];
	char	v2[20];

	p(v1, " - ");
	p(v2, " - ");
	strcpy(dest, v1);

	dest[strlen(dest)] = 32;
	strcat(dest, v2);

	return;
}


int	main(void)
{
	char	s[54];

	pp(s);
	puts(s);

	return 0;
}
